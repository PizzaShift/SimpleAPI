git pull

# the push back the chnages 
git push origin master 


#i added this section to the yml file so we can the run our tests
steps:
  - task: DotNetCoreCLI@2
    imputs:
      command: test
      projects: "**/*Test/*.csproj"
      arguments: "--configuration $(buildConfiguration)"
 

git status
git add . 
git commit -m "updated yml file to run the tests"
git status
git push origin master

